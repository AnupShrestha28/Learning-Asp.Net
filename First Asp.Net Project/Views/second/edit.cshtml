@model First_Asp.Net_Project.Models.teacher
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>




@using (Html.BeginForm("Updatedata", "second"))
{
    <input type="hidden" name="Teacher_id" value="@Model.Teacher_id" />
    <label class="col-md-2">Name</label>
    <br />
    <div class="col-md-4">
        <input type="text" name="Teacher_name" class="form-control" value="@Model.Teacher_name" />
    </div>

    <label class="col-md-2">Address</label>
    <br />
    <div class="col-md-4">
        <input type="text" name="Teacher_address" class="form-control" value="@Model.Teacher_address" />
    </div>

    <label class="col-md-2">Contact</label>
    <br />
    <div class="col-md-4">
        <input type="text" name="Teacher_Phone" class="form-control" value="@Model.Teacher_Phone" />
    </div>
    <br />

    <div class="col-md-2">
        <input type="Submit" class="btn btn-success" value="Save" />
    </div>
}
